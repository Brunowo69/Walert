<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Anillo de fondo -->
    <item>
        <shape
            android:shape="ring"
            android:thickness="12dp"
            android:useLevel="false">
            <solid android:color="#B0BEC5" /> <!-- Un gris claro para el fondo -->
        </shape>
    </item>
    <!-- Anillo de progreso -->
    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="-90">
            <shape
                android:shape="ring"
                android:thickness="12dp"
                android:useLevel="true">
                <solid android:color="#42A5F5" /> <!-- Un azul atractivo para el progreso -->
            </shape>
        </rotate>
    </item>
</layer-list>