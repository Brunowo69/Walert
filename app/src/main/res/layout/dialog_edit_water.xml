<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Progreso"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnDialogRemove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_background_remove"
            android:src="@drawable/ic_remove" />

        <TextView
            android:id="@+id/tvDialogCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="0"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnDialogAdd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_background_add"
            android:src="@drawable/ic_add" />

    </LinearLayout>

</LinearLayout>